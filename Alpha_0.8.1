#!/bin/sh
echo "Downloading files..."
curl https://codeload.github.com/NorcuxOS/build-scripts-rolling/tar.gz/Alpha_0.8.1 --output Alpha_0.8.1.tar.gz

echo "Unpacking files..."
tar -xf Alpha_0.8.1.tar.gz --one-top-level=Alpha_0.8.1 --strip 1

echo "Installing..."
cd Alpha_0.8.1/live-iso/

cp "airootfs/etc/skel/.config/ksplashrc" "/etc/skel/.config/ksplashrc"
for homedir in /home/*; do cp "airootfs/etc/skel/.config/ksplashrc" "$homedir/.config/ksplashrc"; done

source /etc/os-release
sed -i "/PRETTY_NAME=/c\PRETTY_NAME=\"$NAME Alpha 0.8.1\"" "/etc/os-release"
sed -i "/VERSION=/c\VERSION=\"Alpha 0.8.1\"" "/etc/os-release"
sed -i "/Version=/c\Version=Alpha 0.8.1" "/etc/xdg/kcm-about-distrorc"

echo ""
echo "Done!"
